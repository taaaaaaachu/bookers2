<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <p class="h2">Editing Book</p>
      <%= form_with model: @book do |f| %>
          <p>title</p>
            <%= f.text_field :title, class: 'form-control' %>
          <p>Opinion</p>
            <%= f.text_area :body, class: 'form-control' %>
          <%= f.submit 'Update Book', class: 'btn btn-success mt-2'  %>
      <% end %>
      <%= link_to 'Show', book_path(@book.id), class: 'mt-3' %>  |
      <%= link_to 'Back', books_path, class: 'mt-3' %>

    </div>
  </div>
</div>