<div class="container">
  <% if @user.errors.any? %>
    <%= @user.errors.count %>error prohibited this obj from being saved:
    <ul>
    <% @user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
    </ul>
    <% end %>
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <%= form_with model: @user do |f| %>
        <label for="inputName">Name</label><br>
        <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"Name"%><br>
        <label for="inputImage", class="mt-3">Image</label><br>
        <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %><br>
        <label for="inputName", class="mt-3">Introduction</label><br>
        <%= f.text_area :introduction, id:"Introduction", placeholder:"Introduction"%><br>
        <%= f.submit "Update User", class: 'btn btn-secondary mt-3' %>
      <% end %>
    </div>
  </div>
</div>